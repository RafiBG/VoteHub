@{
    ViewBag.Title = "Chat Gimini";
    var chatHistory = ViewBag.ChatHistory ?? "";
}

<h1>Chat with Gimini</h1>

<div style="border: 1px solid #ccc; padding: 10px; height: 400px; overflow-y: auto; background-color: #f9f9f9;">
    <pre style="font-family: Arial, sans-serif;">@chatHistory</pre>
</div>

<form method="post" asp-action="SendMessage">
    <div style="margin-top: 10px;">
        <textarea name="userMessage" style="width: 100%; height: 50px;" placeholder="Type your message here..."></textarea>
    </div>
    <div style="margin-top: 10px; text-align: right;">
        <button type="submit" style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; cursor: pointer;">
            Send
        </button>
    </div>
</form>
